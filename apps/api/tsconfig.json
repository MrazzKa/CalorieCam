{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "outDir": "./dist",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "types": ["node"],
    "lib": ["ES2021"]
  },
  "include": ["src/**/*.ts"],
  "exclude": [
  "node_modules",
  "dist",
  "test",
  "**/*.spec.ts",
  "**/*.test.ts",
  "*.env",
  "**/*.env",
  ".env*"
]
}